**********************************************************************************************************************************
                                                              SELF
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        string s;
        cin >> s;
        map < int, int > frq = {
            {0,0},
            {1,0}
        };
        for (int i = 0; i < n; i++)
        {
            if (s[i] == '0') frq.at(0) ++;
            else frq.at(1) ++;
        }
        if (frq.at(1) <= frq.at(0)) cout << frq.at(1) << endl;
        else cout << n - frq.at(1) + 1 << endl;
    }
}
**********************************************************************************************************************************
                                                               BEST
#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        string s;
        cin >> s;

        int zeros = 0;
        int ones = 0;

        for (char c : s) {
            if (c == '0') {
                zeros++;
            } else {
                ones++;
            }
        }

        cout << min(ones, zeros + 1) << endl;
    }
    return 0;
}
**********************************************************************************************************************************
