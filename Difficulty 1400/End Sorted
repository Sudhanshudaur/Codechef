#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;  cin>>t;
    while(t--)
    {
      int n,f,l; cin>>n;
      int a[n];
      for(int i=0; i<n; i++)
      {
          cin>>a[i];
          if(a[i]==1)  f=i;
          if(a[i]==n)  l=i;
      }
      if (f==0 && l==n-1)  cout<<0<<endl;
      else if(f<l)   cout<<f+n-l-1<<endl;
      else           cout<<f+n-l-2<<endl;
    }
}
