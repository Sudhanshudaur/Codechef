#include <bits/stdc++.h>
using namespace std;

int main() {
    int t,n;
    string s;
    cin>>t;
    for(int i=1; i<=t ; i++)
    {
       cin>>n;
       cin>>s;
       for(int i=0; i<=n-2;)
       {
           char t = s.at(i);
           s.at(i) = s.at(i+1);
           s.at(i+1) = t;
           i = i+2;
       }
    for(int i=0; i<n; i++)
    {
        int a = s.at(i);
        int dif = abs(122-a);
        s.at(i) = dif + 97;
    }
    cout<<s<<endl;
    }
}


***************************************************************************************************************

#include <iostream>
#include <string>
using namespace std;

int main() {
    int t, n;
    string s;
    cin >> t;
    while (t--) {
        cin >> n;
        cin >> s;

        // Swap adjacent characters
        for (int i = 0; i < n - 1; i += 2) {
            char temp = s[i];
            s[i] = s[i + 1];
            s[i + 1] = temp;
        }

        // Replace each character with its mirrored counterpart
        for (int i = 0; i < n; i++) {
            s[i] = 'a' + 'z' - s[i];
        }

        cout << s << endl;
    }
    return 0;
}

***************************************************************************************************************
