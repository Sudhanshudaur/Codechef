#include <bits/stdc++.h>
using namespace std;

int main() {
    int t,n;
    string s;
    cin>>t;
    for(int i=1; i<=t ; i++)
    {
       cin>>n;
       cin>>s;
       for(int i=0; i<=n-2;)
       {
           char t = s.at(i);
           s.at(i) = s.at(i+1);
           s.at(i+1) = t;
           i = i+2;
       }
    for(int i=0; i<n; i++)
    {
        int a = s.at(i);
        int dif = abs(122-a);
        s.at(i) = dif + 97;
    }
    cout<<s<<endl;
    }
}
