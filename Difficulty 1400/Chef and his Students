#include <bits/stdc++.h>
using namespace std;

int main() {
	int t; cin>>t;
	while (t--)
	{
	    int cnt = 0;
	    string s; cin>>s;
	    for(int i=0; i<s.length(); i++)
	    {
	        if (s.at(i) == '>')  s.at(i) = '<';
	        else if (s.at(i) == '<')   s.at(i) = '>';
	    }
	    for (int i=0; i<s.length()-1; i++)
	    {
	        if(s.at(i)=='>' && s.at(i+1)=='<')   cnt++;
	    }
	    cout<<cnt<<endl;
	}
}
