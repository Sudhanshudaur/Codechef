#include <iostream>
#include <vector>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }
        int first_inversion_index = -1;
        for (int i = 0; i < n - 1; ++i) {
            if (a[i] > a[i + 1]) {
                first_inversion_index = i;
                break;
            }
        }
        if (first_inversion_index != -1) {
            swap(a[first_inversion_index], a[first_inversion_index + 1]);
        }
        bool sorted = true;
        for (int i = 0; i < n - 1; ++i) {
            if (a[i] > a[i + 1]) {
                sorted = false;
                break;
            }
        }
        if (sorted) {
            cout << "YES" << endl;
        } else {
            cout << "NO" << endl;
        }
    }
    return 0;
}
